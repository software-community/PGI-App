<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    tools:context="com.mapps.stroleapp.careathome.MedicationAdvice"
    android:background="@color/color_dark"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <TextView
            android:id="@+id/dos"
            android:text="@string/dos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="20dp"
            android:textColor="@color/colorAccent"
            android:background="@color/color_dark"/>

        <TextView
            android:id="@+id/do_instructions"
            android:text="@string/do_instructions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textSize="15sp"
            android:layout_below="@id/dos"
            android:layout_margin="10dp"
            android:textColor="@color/colorAccent"
            android:background="@color/color_dark"/>

        <TextView
            android:id="@+id/dont"
            android:text="@string/dont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_below="@id/do_instructions"
            android:layout_margin="20dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorAccent"
            android:background="@color/color_dark"/>

        <TextView
            android:id="@+id/dont_instructions"
            android:text="@string/dont_instructions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_below="@id/dont"
            android:textSize="15sp"
            android:layout_margin="10dp"
            android:textColor="@color/colorAccent"
            android:background="@color/color_dark"/>
    </LinearLayout>


</ScrollView>
