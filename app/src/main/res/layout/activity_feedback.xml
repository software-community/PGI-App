<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="com.mapps.stroleapp.feedback.FeedbackActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:background="@drawable/button_blue"
            android:hint="@string/fill_query"
            android:textColorHint="@color/grey"
            android:layout_margin="10dp"
            android:textColor="@color/white"
            android:id="@+id/query"
            android:inputType="textMultiLine"
            android:minLines="6"
            android:maxLines="10"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:scrollbars="vertical"
            />

        <Button
            android:text="@string/submit"
            android:background="@drawable/button_orange"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <EditText
            android:background="@drawable/button_blue"
            android:id="@+id/suggestion"
            android:hint="@string/suggestions"
            android:textColorHint="@color/grey"
            android:textColor="@color/white"
            android:inputType="textMultiLine"
            android:minLines="6"
            android:maxLines="10"
            android:layout_margin="10dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:scrollbars="vertical"
            />

        <Button
            android:text="@string/submit"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/button_orange"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/video_feedback_message"
            android:text="@string/video_feedback_message"
            android:textColor="@android:color/holo_red_dark"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:scrollbars="vertical"
            />

        <VideoView
            android:layout_gravity="center"
            android:id="@+id/video_feedback"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <Button
            android:id="@+id/submit"
            android:text="@string/submit"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</ScrollView>
