<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:layout_gravity="center"
    android:background="@color/color_dark"
    tools:context="com.mapps.stroleapp.feedback.FeedbackActivity">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="wrap_content">

        <EditText
            android:background="@drawable/roundbutton"
            android:hint="@string/fill_query"
            android:textColorHint="@color/grey"
            android:layout_margin="10dp"
            android:textColor="@color/colorAccent"
            android:id="@+id/query"
            android:inputType="textMultiLine"
            android:minLines="6"
            android:maxLines="6"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:scrollbars="vertical"
            />



        <EditText
            android:background="@drawable/roundbutton"
            android:id="@+id/suggestion"
            android:hint="@string/suggestions"
            android:textColorHint="#c6c1be"
            android:textColor="@color/colorAccent"
            android:inputType="textMultiLine"
            android:minLines="6"
            android:maxLines="6"
            android:layout_margin="10dp"
            android:layout_below="@id/query"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:scrollbars="vertical"
            />



        <TextView
            android:id="@+id/video_feedback_message"
            android:text="@string/video_feedback_message"
            android:textColor="#F48642"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_below="@id/suggestion"
            android:layout_width="match_parent"
            android:scrollbars="vertical"
            />

        <VideoView
            android:layout_gravity="center"
            android:id="@+id/video_feedback"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_below="@id/video_feedback_message"
            android:layout_height="180dp" />
        <Button
            android:id="@+id/uploadvideoButton"
            android:text="@string/pick_video"
            android:background="@drawable/roundbutton"
            android:layout_gravity="center"
            android:textColor="@color/colorAccent"
            android:layout_below="@id/video_feedback"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <Button
            android:id="@+id/btnsubmit"
            android:text="@string/submit"
            android:background="@drawable/roundbutton"
            android:textColor="@color/colorAccent"
            android:layout_below="@id/video_feedback"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />


    </RelativeLayout>

</ScrollView>
