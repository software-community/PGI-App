<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mapps.stroleapp.RoleActivity"
    android:background="@color/color_dark">


    <LinearLayout
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:background="@drawable/roundbutton"
            android:textColor="@color/colorAccent"
            android:id="@+id/role_care_giver"
            android:text="@string/role_caregiver"
            android:layout_gravity="center_horizontal"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:layout_marginBottom="40dp"
            android:textSize="@dimen/btn_txt_size_medium"/>

        <Button
            android:background="@drawable/roundbutton"
            android:textColor="@color/colorAccent"
            android:id="@+id/role_patient"
            android:text="@string/role_patient"
            android:layout_below="@+id/role_care_giver"
            android:layout_gravity="center_horizontal"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:textSize="@dimen/btn_txt_size_medium"/>

    </LinearLayout>



</RelativeLayout>
