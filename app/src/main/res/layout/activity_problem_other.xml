<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mapps.stroleapp.problemsafterstroke.ProblemBedsoreActivity"

    android:background="@color/color_dark">

    <TextView
        android:text="@string/other_health_problems"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:background="@color/color_dark">


        <TextView

            android:text="@string/problem"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textColorHighlight="@color/orange"
            android:backgroundTint="@color/orange"
            />


        <TextView
            android:text="@string/duration"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_gravity="left"
            android:textColorHighlight="@color/orange"
            android:backgroundTint="@color/orange"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:background="@color/color_dark">


        <TextView
            android:text="1."
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_gravity="left"
            android:textColorHighlight="@color/orange"
            android:backgroundTint="@color/orange"/>

        <EditText
            android:id="@+id/ohp_one"
            android:inputType="text"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textColorHighlight="@color/orange"
            android:backgroundTint="@color/orange"
            />


        <EditText
            android:id="@+id/ohp_one_duration"
            android:inputType="number"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_gravity="left"
            android:textColorHighlight="@color/orange"
            android:backgroundTint="@color/orange"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:background="@color/color_dark">

        <TextView
            android:text="2."
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_gravity="left"
            android:textColorHighlight="@color/orange"
            android:backgroundTint="@color/orange"/>

        <EditText
            android:id="@+id/ohp_two"
            android:inputType="text"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_gravity="left"
            android:textColorHighlight="@color/orange"
            android:backgroundTint="@color/orange"/>

        <EditText
            android:id="@+id/ohp_two_duration"
            android:layout_gravity="center_horizontal"
            android:inputType="number"
            android:layout_width="50dp"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:textColorHighlight="@color/orange"
            android:backgroundTint="@color/orange"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:background="@color/color_dark">

        <TextView
            android:text="3."
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_gravity="left"
            android:textColorHighlight="@color/orange"
            android:backgroundTint="@color/orange"/>

        <EditText
            android:id="@+id/ohp_three"
            android:inputType="text"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_gravity="left"
            android:textColorHighlight="@color/orange"
            android:backgroundTint="@color/orange"/>

        <EditText
            android:id="@+id/ohp_three_duration"
            android:layout_gravity="center_horizontal"
            android:inputType="number"
            android:layout_width="50dp"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:textColorHighlight="@color/orange"
            android:backgroundTint="@color/orange"/>

    </LinearLayout>





    <Button
        android:id="@+id/submit"
        android:text="@string/submit"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roundbutton"
        android:layout_margin="10dp"
        android:textColor="@color/colorAccent"/>

    <Button
        android:id="@+id/back"
        android:text="@string/back"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/roundbutton"
        android:textColor="@color/colorAccent" />



</LinearLayout>
